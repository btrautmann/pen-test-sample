<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_uri_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.net.Uri.parse(&quot;http://attacker.com\\\\@legitimate.com/smth&quot;).host" />

    <TextView
        android:id="@+id/textview_uri_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="value" />

    <TextView
        android:id="@+id/textview_url_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="java.net.URL(&quot;http://attacker.com\\\\@legitimate.com/smth&quot;).host" />

    <TextView
        android:id="@+id/textview_url_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="value" />


</androidx.appcompat.widget.LinearLayoutCompat>